<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tvNutritionFoodNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@id/tvNutritionFoodNo"
        app:layout_constraintLeft_toRightOf="@id/tvNutritionFoodNo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:text="x"
        android:textColor="#F2E6E6"
        android:textSize="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFood" />

    <TextView
        android:id="@+id/tvFoodQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:text=""
        android:textColor="#F2E6E6"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFood" />

    <TextView
        android:id="@+id/lblTotalFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Total Fat (g)"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/tvNutritionFoodNo"
        app:layout_constraintTop_toBottomOf="@id/tvNutritionFoodNo" />

    <TextView
        android:id="@+id/lblCarbohydrates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="Total Carbohydrates (g)"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/tvNutritionFoodNo"
        app:layout_constraintTop_toBottomOf="@id/tvNutritionFoodNo" />

    <TextView
        android:id="@+id/lblProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="Protein (g)"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/tvNutritionFoodNo"
        app:layout_constraintTop_toBottomOf="@id/tvNutritionFoodNo" />

    <TextView
        android:id="@+id/lblCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:text="Calories  (kcal)"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="@id/tvNutritionFoodNo"
        app:layout_constraintTop_toBottomOf="@id/tvNutritionFoodNo" />

    <TextView
        android:id="@+id/tvFoodFat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@id/lblTotalFat"
        app:layout_constraintRight_toRightOf="@id/tvFoodQuantity" />

    <TextView
        android:id="@+id/tvFoodCarbohydrates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@id/lblCarbohydrates"
        app:layout_constraintRight_toRightOf="@id/tvFoodQuantity" />

    <TextView
        android:id="@+id/tvFoodProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@id/lblProtein"
        app:layout_constraintRight_toRightOf="@id/tvFoodQuantity" />

    <TextView
        android:id="@+id/tvFoodCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@id/lblCalories"
        app:layout_constraintRight_toRightOf="@id/tvFoodQuantity" />

</androidx.constraintlayout.widget.ConstraintLayout>
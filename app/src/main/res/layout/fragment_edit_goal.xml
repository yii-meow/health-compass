<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAFFFB"
    tools:context=".ui.nutrition.edit_goal">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconSize="40dp"
        android:gravity="center_horizontal"
        android:backgroundTint="#DAFFFB"
        android:layout_marginTop="10dp"
        app:iconTint="@color/black"
        app:icon="@drawable/baseline_arrow_back_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSetGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Goal"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="@id/btnBack"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:iconSize="40dp"
        android:gravity="center_horizontal"
        android:backgroundTint="#DAFFFB"
        android:layout_marginTop="10dp"
        app:iconTint="@color/black"
        app:icon="@drawable/baseline_done_24"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerSetGoal"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:entries="@array/goals"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/lblSetGoal" />


</androidx.constraintlayout.widget.ConstraintLayout>
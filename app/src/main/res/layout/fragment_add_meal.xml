<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DAFFFB"
    tools:context=".add_meal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblAddMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Add Meal"
            android:textColor="@color/black"
            android:textSize="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMealLabeling"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/lblAddMeal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="Meal"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvMealType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:text=""
                    android:textColor="#64CCC5"
                    android:textSize="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAddFood"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            app:cardBackgroundColor="#04364A"
            app:layout_constraintTop_toBottomOf="@id/cardMealLabeling">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblSelectFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="8dp"
                    android:text="Select Food"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/tvSelectFood"
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="90dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:backgroundTint="#176B87"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/white"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvFoodNo"
                    app:layout_constraintLeft_toRightOf="@id/tvSelectFood" />

                <TextView
                    android:id="@+id/tvFoodNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="1."
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    app:layout_constraintRight_toLeftOf="@id/tvSelectFood"
                    app:layout_constraintTop_toTopOf="@id/tvSelectFood" />

                <ImageView
                    android:id="@+id/imgDeleteFood"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="55dp"
                    android:src="@drawable/delete"
                    app:layout_constraintBottom_toBottomOf="@id/tvSelectFood"
                    app:layout_constraintLeft_toRightOf="@id/tvSelectFood"
                    app:layout_constraintTop_toTopOf="@id/tvSelectFood" />

                <TextView
                    android:id="@+id/lblTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:text="Time"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="@+id/lblSelectFood"
                    app:layout_constraintTop_toBottomOf="@+id/lblSelectFood" />

                <ImageView
                    android:id="@+id/imgAddFood"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/green_add"
                    app:layout_constraintLeft_toLeftOf="@id/tvSelectFood"
                    app:layout_constraintTop_toBottomOf="@id/tvSelectFood" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Add Food"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/imgAddFood"
                    app:layout_constraintLeft_toRightOf="@id/imgAddFood"
                    app:layout_constraintTop_toTopOf="@id/imgAddFood" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTimePicker"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#DAFFFB"
                    android:text="Pick Time"
                    android:textColor="@color/black"
                    app:cornerRadius="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/lblTime"
                    app:layout_constraintLeft_toLeftOf="@id/tvSelectFood"
                    app:layout_constraintTop_toTopOf="@id/lblTime" />

                <TextView
                    android:id="@+id/tvMealTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text=""
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/btnTimePicker"
                    app:layout_constraintTop_toBottomOf="@id/btnTimePicker" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMakeMealChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/design_default_color_secondary"
            android:paddingHorizontal="50dp"
            android:text="Make Meal Changes"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardAddFood" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="452dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="#04364A"
            app:layout_constraintTop_toBottomOf="@id/cardAddFood">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="600dp">

                <ImageView
                    android:id="@+id/imgNutritionFact"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="17dp"
                    android:src="@drawable/nutrition_fact"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Nutrition Fact"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    app:layout_constraintBottom_toBottomOf="@id/imgNutritionFact"
                    app:layout_constraintLeft_toRightOf="@id/imgNutritionFact"
                    app:layout_constraintTop_toTopOf="@id/imgNutritionFact" />

                <TextView
                    android:id="@+id/lblIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Automatically generated by system for your food(s)."
                    android:textColor="#F2E6E6"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toLeftOf="@id/imgNutritionFact"
                    app:layout_constraintTop_toBottomOf="@id/imgNutritionFact" />

                <TextView
                    android:id="@+id/tvFoodNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="1."
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    app:layout_constraintLeft_toLeftOf="@id/lblIntro"
                    app:layout_constraintTop_toBottomOf="@id/lblIntro" />

                <TextView
                    android:id="@+id/tvFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Fish &amp; Chip"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tvFoodNo"
                    app:layout_constraintLeft_toRightOf="@id/tvFoodNo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="60dp"
                    android:text="x"
                    android:textColor="#F2E6E6"
                    android:textSize="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvFood" />

                <TextView
                    android:id="@+id/tvFood1Quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp"
                    android:text="1"
                    android:textColor="#F2E6E6"
                    android:textSize="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvFood" />

                <TextView
                    android:id="@+id/lblTotalFat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Total Fat (g)"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/tvFoodNo"
                    app:layout_constraintTop_toBottomOf="@id/tvFoodNo" />

                <TextView
                    android:id="@+id/lblCarbohydrates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="85dp"
                    android:text="Total Carbohydrates (g)"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/tvFoodNo"
                    app:layout_constraintTop_toBottomOf="@id/tvFoodNo" />

                <TextView
                    android:id="@+id/lblProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="140dp"
                    android:text="Protein (g)"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/tvFoodNo"
                    app:layout_constraintTop_toBottomOf="@id/tvFoodNo" />

                <TextView
                    android:id="@+id/lblCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="195dp"
                    android:text="Calories  (kcal)"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/tvFoodNo"
                    app:layout_constraintTop_toBottomOf="@id/tvFoodNo" />

                <TextView
                    android:id="@+id/tvFood1Fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/lblTotalFat"
                    app:layout_constraintRight_toRightOf="@id/tvFood1Quantity" />

                <TextView
                    android:id="@+id/tvFood1Carbohydrates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/lblCarbohydrates"
                    app:layout_constraintRight_toRightOf="@id/tvFood1Quantity" />

                <TextView
                    android:id="@+id/tvFood1Protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/lblProtein"
                    app:layout_constraintRight_toRightOf="@id/tvFood1Quantity" />

                <TextView
                    android:id="@+id/tvFood1Calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/lblCalories"
                    app:layout_constraintRight_toRightOf="@id/tvFood1Quantity" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
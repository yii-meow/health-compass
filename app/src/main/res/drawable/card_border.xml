<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Background color for the CardView -->
    <solid android:color="@android:color/white" />
    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" /> <!-- Set the border color to black -->
    <!-- Corner radius for the CardView -->
    <corners android:radius="8dp" /> <!-- Set your desired corner radius -->
</shape>
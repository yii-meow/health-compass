<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="285dp"
    android:layout_height="wrap_content"
    android:background="#04364A"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/tvFoodNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="1)"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/tvSelectFood"
        app:layout_constraintBaseline_toBaselineOf="@id/tvSelectFood" />

    <EditText
        android:id="@+id/tvSelectFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:backgroundTint="#176B87"
        android:hint="Enter food here..."
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="18dp"
        android:paddingLeft="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvFoodQuantity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:backgroundTint="#176B87"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:text="1"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectFood"
        app:layout_constraintLeft_toRightOf="@id/tvSelectFood" />

    <ImageView
        android:id="@+id/imgDeleteFood"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginLeft="55dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="@id/tvSelectFood"
        app:layout_constraintLeft_toRightOf="@id/tvSelectFood"
        app:layout_constraintTop_toTopOf="@id/tvSelectFood" />

</androidx.constraintlayout.widget.ConstraintLayout>
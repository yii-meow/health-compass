<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DAFFFB">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="180dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgProfileAddFriend"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/male" />

            <TextView
                android:id="@+id/txtNameAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Name"
                android:textColor="#121212"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imgProfileAddFriend"
                app:layout_constraintStart_toStartOf="@+id/imgProfileAddFriend"
                app:layout_constraintTop_toBottomOf="@+id/imgProfileAddFriend" />

            <TextView
                android:id="@+id/txtUsernameAddFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Username"
                android:textColor="#99121212"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/txtNameAddFriend"
                app:layout_constraintStart_toStartOf="@+id/txtNameAddFriend"
                app:layout_constraintTop_toBottomOf="@+id/txtNameAddFriend" />

            <ImageView
                android:id="@+id/imgAddFriend"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/txtUsernameAddFriend"
                app:layout_constraintStart_toStartOf="@+id/txtUsernameAddFriend"
                app:layout_constraintTop_toBottomOf="@+id/txtUsernameAddFriend"
                app:srcCompat="@drawable/addfriend" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>